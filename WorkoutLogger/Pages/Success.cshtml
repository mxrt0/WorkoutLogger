@page
@model WorkoutLogger.Pages.SuccessModel
@{
    ViewData["Title"] = "Success!";
}

<h1 class="bg-success text-success alert-success fw-bold py-5 text-white text-center">Success!</h1>

<div class="card shadow-sm mx-auto my-5" style="max-width: 20rem;">
    <div class="card-body text-center">
        <h5 class="card-title">You will be redirected to the Home Page in</h5>
        <h2 id="countdown" class="text-danger">3s...</h2>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let remaining = 3;
            const countdownEl = document.getElementById("countdown");

            const timer = setInterval(() => {
                remaining--;
                countdownEl.textContent = remaining + "s...";

                if (remaining <= 0) {
                    clearInterval(timer);

                    window.location.href = "./Index"; 
                }
            }, 1000);
        });
    </script>
}

