@page
@model WorkoutLogger.Pages.DeleteModel
@{
    ViewData["Title"] = "Delete Workout";
}

<h2 class="text-decoration-underline text-lg-center">
    Are you sure you want to delete this workout?
</h2>
<div class="row d-flex flex-column justify-content-center align-items-center">
    <br />
    <div class="col-auto text-center">
        <dl class="d-flex flex-column align-items-center">
            <div class="d-flex flex-column justify-content-between">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(Model => Model.Workout.Date)
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(Model => Model.Workout.Date)
                </dd>
            </div>
            <div class="d-flex flex-column justify-content-between">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(Model => Model.Workout.StartTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(Model => Model.Workout.StartTime)
                </dd>
            </div>
            <div class="d-flex flex-column justify-content-between">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(Model => Model.Workout.EndTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(Model => Model.Workout.EndTime)
                </dd>
            </div>
            <div class="d-flex flex-column justify-content-between">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(Model => Model.Workout.Duration)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(Model => Model.Workout.Duration)
                </dd>
            </div>
            <div class="d-flex flex-column justify-content-between">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(Model => Model.Workout.MuscleGroup)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(Model => Model.Workout.MuscleGroup)
                </dd>
            </div>
    </dl>
    <hr class="w-100 mx-auto" />
    <form method="post" class="d-flex flex-column align-items-center">
        <input type="submit" value="Delete" class="btn btn-danger mb-2" />
        <a class="btn btn-primary" asp-page="./Index">Back To Home</a>
    </form>
    </div>
</div>
